<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#91f1b9">

    <TextView
        android:id="@+id/course_code_tv"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COL260 code"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/course_name_tv"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design Practices"
        android:layout_alignBottom="@id/course_code_tv"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/course_code_tv"
        android:paddingLeft="5dp"/>
</RelativeLayout>
